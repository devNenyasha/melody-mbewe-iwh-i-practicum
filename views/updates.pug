doctype html
html
  head
    title Update Video Game Character
  body
    h1 Update Video Game Character
    form(action='/update-characters' method='POST')
      label(for='name') Name:
      input(type='text' name='name' required)
      br
      label(for='bio') Bio:
      textarea(name='bio' required)
      br
      label(for='ability') Ability:
      input(type='text' name='ability' required)
      br
      button(type='submit') Save